@model List<Node>

<a asp-controller="Home" asp-action="AddNode">Add node</a>

<table>
	<tr> <td>Id</td> <td>Title</td> <td>Description</td> </tr>
	@foreach (Node node in Model)
	{
		<tr> 
			<td>@node.Id</td>
			<td>@node.Title</td>
			<td>@node.Description</td>
			<td>
				<a asp-controller="Home" asp-action="EditNode" asp-route-id="@node.Id">Edit</a>
			</td>
			<td>
				<form method="post" asp-controller="Home" asp-action="DeleteNode" asp-route-id="@node.Id">
					<input type="submit" value="Delete"/>
				</form>
			</td>
		</tr>
	}
</table>